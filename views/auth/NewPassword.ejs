<%- include("../includes/Header")%>
<section class="addPost">
  <div class="titleContainer">
    <h1>Reset Your Password</h1>
    <button><a href="/">Go Back Home</a></button>
  </div>
  <form action="/change-new-pwd" method="post" class="form">
    <input hidden value="<%= csrfToken %>" name="_csrf" />
    <input hidden value="<%= resetToken %>" name="resetToken" />
    <input hidden value="<%= userId %>" name="userId" />
    <div class="formInput">
      <% if(error.length) {%>
      <div class="errMsg"><%= error %></div>
      <%}%>
    </div>
    <div class="formInput">
      <label for="password">Password</label>
      <input type="password" id="password" name="password" />
    </div>
    <div class="formInput">
      <label for="password">Confirm Password</label>
      <input type="password" id="password" name="confirmPassword" />
    </div>
    <button>Reset Password</button>
  </form>
</section>
<%- include("../includes/Footer")%>
