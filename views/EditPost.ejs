<%- include("./includes/Header")%>
<section class="verAlign">
  <div class="verAlign">
    <h1 class="text-2xl font-bold my-4 ">Edit Post Here</h1>
    <button class="button mb-4"><a href="/">Go Back Home</a></button>
  </div>
  <form class="w-full verAlign" action="/admin/edit/" method="post" class="form" enctype="multipart/form-data">
    <input hidden value="<%= csrfToken %>" name="_csrf" />
    <input type="text" value="<%= isValidationFail ? postId : post._id%>" name="postId" hidden />
    <div class="formInput">
      <% if(error.length) {%>
      <div class="warning"><%= error %></div>
      <%}%>
    </div>
    <div class="formInput">
      <label for="title" class="label">Title</label>
      <input
        type="text"
        id="title"
        name="title"
        required
        value="<%= isValidationFail ? oldFormData.title : post.title %>"
        class="input"
      />
    </div>
    <div class="formInput">
      <label for="photo" class="label">Photo</label>
      <input
        type="file"
        id="photo"
        name="photo"
      />
    </div>
    <div class="formInput">
      <label for="description" class="label">Description</label>
      <textarea name="description" id="description" rows="10" cols="10" class="input">
<%= isValidationFail ? oldFormData.description : post.description %></textarea
      >
    </div>
    <button class="button my-4">Update</button>
  </form>
</section>
<%- include("./includes/Footer")%>
