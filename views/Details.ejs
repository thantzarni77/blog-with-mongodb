<%- include("./includes/Header")%>
<section class="w-full">
 <div class="verAlign w-[90%] md:w-[70%] m-auto">
  <button class="button my-4"><a href="/">Go Back Home</a></button> 
   <h1 class="text-2xl font-bold mb-4"><%=post.title%></h1>
   <p class="self-start ml-[5%] mb-2">Posted by - <span class="text-blue-600"><%=post.userId.email%></span></p>
   <%if(date) {%>
    <p class="self-start ml-[5%] mb-2">Uploaded at - <%=date%></p>
    <%}%>
  <img class="mb-3 rounded w-[90%]" src="<%='/' + post.imgUrl%>" alt="" />
  <div class="m-auto w-[90%] break-words"><%=post.description%></div>
  <% if (post.userId._id?.toString() == currentUserId?.toString()){%>
  <div class="flex w-full justify-start ml-[10%] gap-8 my-4 items-center">
    <form action="/admin/delete/<%=post._id%>" method="post">
      <input hidden value="<%= csrfToken %>" name="_csrf" />
      <button class="button">DELETE POST</button>
    </form>
    <a href="/admin/edit/<%=post._id%>"><button class="button">EDIT POST</button></a>
  </div>
  <%}%>
 </div>
</section>
<%- include("./includes/Footer")%>
