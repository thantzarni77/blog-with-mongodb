<%- include("../includes/Header")%>
<section class="verAlign">
    <div class="flex flex-col items-center w-[100%]">
        <div class="flex flex-col items-center">
           <% if(posts[0].userId.profile_imgUrl && posts[0].userId.isPremium) {%>
                 <img class="w-24 rounded-md my-2" src="<%='/' + posts[0].userId.profile_imgUrl%>" alt="<%=posts[0].userId.username%>">
              <% } else {%>
                 <i><i class="fa-solid fa-circle-user ppuserIcon my-2"></i></i>
              <% } %>
          <h1 class="text-xl md:text-2xl font-bold"><%=userEmail%></h1>
        <%if(posts[0].userId.username) { %>
              <div class="flex items-center gap-2">
                <h1><%=posts[0].userId.username%></h1>
                <% if(posts[0].userId.isPremium) {%>
                  <i class="fa-solid fa-star-half-stroke animate__animated animate__rubberBand animate__infinite my-2"></i>
                <%}%>
              </div>
            <%}else {%>
              <h1><%=posts[0].userId.username%></h1>
            <%}%>
      </div>
      <div class="flex w-[100%] justify-around flex-wrap">
      <% for (let post of posts) {%>
      <div class="flex flex-col items-start w-[80%] sm:w-[400px] border-blue-400 border-2 shadow-xl rounded-md bg-slate-100 mx-3 my-2 p-5 md:h-[20rem] h-[21rem] ">
        <div class="mt-[-0.4rem]"><%=post.title.substr(0,40)%></div>
        <img class="my-1 rounded-md w-full h-36 object-cover" src="<%= '/' + post.imgUrl %>" alt="<%=post.title%>">
        <p class="w-full break-words"><%=post.description.substr(0,80)%> ...</p>
        <a class="mt-[0.4rem] button" href="../post/<%= post._id %>"><button>See More</button></a>
        </div>
    <%}%>
  </div>
    <div>
      
    </div>
    <div class="w-[80%] flex flex-row-reverse justify-between items-center">
       <% if (hasNextPage) {%>
        <a href="/profile/<%=posts[0].userId._id%>?page=<%=nextPage%>"><button class="button my-2">Next Page <%=nextPage%> <i class="fa-solid fa-arrow-right"></i></button></a>
        <%}%>
        <% if (hasPreviousPage) {%>
        <a href="/profile/<%=posts[0].userId._id%>?page=<%=previousPage%>"><button class="button my-2">Previous Page <%=previousPage%> <i class="fa-solid fa-arrow-left"></i></button></a>
        <%}%>
    </div>
</section>
<%- include("../includes/Footer")%>
